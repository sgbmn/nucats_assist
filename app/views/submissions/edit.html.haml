%h3
  Update Title Page for application 
  %i= @submission.submission_title

= form_for(:submission, :url => submission_path(@submission.id), :html => { :multipart => true, :method => :put }) do |f|
  = f.hidden_field :submission_status

  %table.table.table-bordered
    = render 'submission_form', :f => f, :project => @project, :submission => @submission, :applicant => @applicant
    %tr
      %td{colspan: 3, align: "center"}
        = f.submit 'Update Application', class: 'btn btn-success'

.links= link_to 'List of submissions', project_submissions_path(@submission.project_id)