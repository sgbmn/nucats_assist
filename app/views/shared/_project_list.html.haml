- show_details ||= false
- projects.each_with_index do |project, i|
  .project
    .apply
      - if project.current_status =~ /open for/i
        = link_to 'Apply Now', new_project_applicant_path(project.id), title: "Create an application for you or someone else for the competition '#{project.project_title}'", class: 'btn btn-school btn-lg'
      - else
        = project.current_status
      - if show_details
        %div
          Announcement:
          %b= project.initiation_date.to_s(:justdate)
        %div
          Review Closes:
          %b= project.review_end_date.to_s(:justdate)
    .project_details
      .project_information
        .competition
          - if show_project_link
            = link_to h(project.project_title), show_competition_url(project.program.program_name, project.project_name), title: "Click here to view the competition #{project.project_title}"
          - else
            %span.project_title
              = h(project.project_title)
      .project_information
        .project_dates
          Submission Period:
          %b
            = project.submission_open_date.to_s(:justdate)
            \-
            = project.submission_close_date.to_s(:justdate)
        - if show_details
          .project_dates
            Award Period:
            %b
              = project.project_period_start_date.to_s(:justdate)
              \-
              = project.project_period_end_date.to_s(:justdate)
      - if project.membership_required?
        .project_information.membership_required
          NUCATS Membership is required to apply for this competition
      - if has_read_all?(project.program)
        .project_information
          Number of Applications:
          = link_to project.submissions.count.to_s, submissions_project_admins_url(project.id)
      - if show_details
        - unless project.program.program_url.blank?
          .project_information
            - program_title = "Get more information on #{project.program.program_title}"
            = link_to h(project.program.program_title), project.program.program_url, :title => program_title, :target => '_blank'
    = render 'shared/project_actions', project: project, show_submissions: show_details if show_action_links