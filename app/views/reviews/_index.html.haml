%h2
  Applicant: #{submission.applicant.long_name}
.indented
  %table
    %tr
      %td Project:
      %td= submission.submission_title
    - if submission.project.show_submission_category
      %tr
        %td
          = submission.project.category_wording
          \:
        %td= submission.submission_category
    %tr
      %td Competition:
      %td= submission.project.project_title
    %tr
      %td Sponsor:
      %td= submission.project.program.program_title
    %tr
      %td Submission deadline:
      %td= submission.project.submission_close_date
    %tr
      %td Application status:
      %td= submission.status
    %tr
      %td Submission created at:
      %td= submission.project.created_at.to_date
    %tr
      %td Submitter:
      %td= submission.submitter.try(:name).to_s
- reviewer_ids = submission.project.submissions.map { |s| s.submission_reviews.map(&:reviewer_id) }.flatten.uniq
- if submission.project.show_review_summaries_to_applicants or
- is_admin? or
- (submission.project.show_review_summaries_to_reviewers and reviewer_ids.include?(current_user_session.id) )
  %h1 Application reviews
  #scores
    %ol
      - if submission.project.show_impact_score
        %li
          = submission.project.impact_title
          \.
        = review_comments_div(reviews, 'impact_text').html_safe
      - if submission.project.show_team_score
        %li
          = submission.project.team_title
          \.
        = review_comments_div(reviews, 'team_text').html_safe
      - if submission.project.show_innovation_score
        %li
          = submission.project.innovation_title
          \.
        = review_comments_div(reviews, 'innovation_text').html_safe
      - if submission.project.show_scope_score
        %li
          = submission.project.scope_title
          \.
        = review_comments_div(reviews, 'scope_text').html_safe
      - if submission.project.show_environment_score
        %li
          = submission.project.environment_title
          \.
        = review_comments_div(reviews, 'environment_text').html_safe
      - if submission.project.show_budget_score
        %li
          = submission.project.budget_title
          \.
        = review_comments_div(reviews, 'budget_text').html_safe
      - if submission.project.show_other_score
        %li
          = submission.project.other_title
          \.
        = review_comments_div(reviews, 'other_text').html_safe
      - if submission.project.show_completion_score
        %li
          = submission.project.completion_title
          \.
        = review_comments_div(reviews, 'completion_text').html_safe
    %h3 Overall review comments
    = review_comments_div(reviews, 'overall_text').html_safe
- if submission.project.show_composite_scores_to_applicants or
- is_admin? or
- (submission.project.show_composite_scores_to_reviewers and reviewer_ids.include?(current_user_session.id) )
  %h3 Application scores
  #composite_scores
    %ul
      - unless submission.composite_scores.blank? || submission.composite_scores.to_s == '0'
        %li
          Composite score: #{submission.composite_scores}
      %li
        Overall score: #{submission.overall_scores}
%hr