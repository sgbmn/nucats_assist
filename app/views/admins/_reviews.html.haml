- unless submissions.blank? || project.blank?
  %h3 Submissions
  %table#submissionTable.table.tablesorter.sortList:{:class => "{ [[2,0]] }"}
    
    %tr
      %th Applicant
      %th Title
      %th Status
      %th= project.effort_approver_title
      %th Contact
      %th Documents
      %th Composite Scores
      %th Overall Scores
      %th &nbsp;
    
    - submissions.each_with_index do |submission, i |
      %tr
        %td= submission.applicant.sort_name
        %td= link_to( truncate_words(submission.submission_title, 20), submission_path(submission.id) )
        %td= submission.status
        %td= submission.effort_approver.nil? ? "unset" : submission.effort_approver.sort_name
        %td= submission.department_administrator.nil? ? "unset" : submission.department_administrator.sort_name
        %td
          = link_to_submission_pdf(submission)
          - link_to_submission_files(submission, project, false).each do |lnk|
            = lnk.html_safe
          - if submission.submission_reviews.collect{|r| r.has_zero? ? 0 : 1 }.sum > 0
            = link_to(image_tag("page_white_link.png", :width=>"16px", :height=>"16px")+' Reviews', submission_reviews_path(submission.id), :title=>"View the review summary for this submission")
        %td= h submission.composite_scores_string
        %td= h submission.overall_scores_string
        %td
          %span.glyphicon.glyphicon-download-alt
          
  :javascript
    jQuery(document).ready(function() {
    // call the tablesorter plugin
    jQuery("#submissionTable").tablesorter(
    // turn off sorting on the 6th header
    { headers: { 5: {sorter: false} } }
    ); });
- else
  %h3 You do not have any existing submissions for this competition.
%br/