%table.table.table-bordered
  %tr
    %td.title
      = f.hidden_field :program_id
      = f.label "Competition Name"
    %td.notes{:colspan => "2"}
      = f.text_field :project_name, :size => 20, required: true
      %span.required_marker *
      .attribute_description
        Short, no space name for the competition.
        %br/
        This is the name that will appear in the URL for the competition,
        %br/
        like 'https://grants.nubic.northwestern.edu/competitions/cti/spring2011' where spring2011 is the competition name
  %tr
    %td.title
      = f.label "Competition Title"
    %td.notes{:colspan => "2"}
      = f.text_field :project_title, :size => 80, required: true
      %span.required_marker *
      .attribute_description
        Descriptive Title. Required
  %tr
    %td.title
      = f.label "Competition URL"
    %td.notes{:colspan => "2"}
      = f.text_field :project_url, :size=>80
      .attribute_description
        URL for more information about the competition
  %tr
    %td.title
      = f.label :project_url_label, "Competition URL label"
    %td.notes{:colspan => "2"}
      = f.text_field :project_url_label, :size=>80
      .attribute_description
        'Competition RFA' is the default.
  %tr
    %td.title
      = f.label :initiation_date
    %td.notes{:colspan => "2"}
      = f.text_field :initiation_date, :size=>15
      .attribute_description
        Date this competition will first appear on NUCATS Assist (this web site)
  %tr
    %td.title
      = f.label :submission_open_date
    %td.notes{:colspan => "2"}
      = f.text_field :submission_open_date, :size=>15, required: true
