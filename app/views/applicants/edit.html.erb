<h2>
  NUCATS Assist Profile
</h2>
<h3>
  Please review/edit your information
</h3>

<%= form_for(:applicant,
             :url => (params[:project_id].blank? ? applicant_path(@applicant.id) : project_applicant_path(params[:project_id], @applicant.id)),
             :html => { :multipart => true, :method => :put }) do |f| %>
  <!-- f and submission are existing variables passed in -->
  <table class="table">
    <%= render(:partial => 'applicant_form', :locals=>{:f=>f, :applicant=>@applicant}) %>
    <tr>
      <td colspan="3">
        <%= f.submit( (@applicant.id.blank?) ? 'Submit Investigator Profile' : 'Update Profile' , class: 'btn btn-success') %>
      </td>
    </tr>
  </table>
<% end %>
